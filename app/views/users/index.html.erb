<h1>Users</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<%= will_paginate %>
  <tbody>
    <% @users.each do |user| %>
      <tr><br>
        <%= gravatar_for user %>
        <%= link_to user.name, user %>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>

<br>

<%= link_to 'Sign Up', new_user_path %> <br>
<%= link_to 'Log In', login_path %> <br>
<%= link_to 'See list of games available', games_path %>
